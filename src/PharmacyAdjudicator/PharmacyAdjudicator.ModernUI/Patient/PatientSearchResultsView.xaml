<UserControl x:Class="PharmacyAdjudicator.ModernUI.Patient.PatientSearchResultsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <!--<ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="PATIENT SEARCH RESULTS" Style="{StaticResource Heading2}" /> 
                
            </StackPanel>
        </ScrollViewer>-->
        <DockPanel>
            <TextBlock DockPanel.Dock="Top" Text="PATIENT SEARCH RESULTS" Style="{StaticResource Heading2}" Margin="0,0,0,8" />
            <DataGrid Name="PatientSearchDataGrid" ItemsSource="{Binding Path=Model}" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <mui:DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" />
                    <mui:DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" />
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </Grid>
</UserControl>

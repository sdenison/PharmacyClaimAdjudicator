<UserControl x:Class="PharmacyAdjudicator.WPF.Views.AtomView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
        <StackPanel Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
            <TextBox x:Name="Class" Text="{Binding Model.Class, Mode=TwoWay}" MinWidth="100" Margin="3"/>
            <TextBox x:Name="Property" Text="{Binding Model.Property, Mode=TwoWay}" MinWidth="100" Margin="3"/>
            <TextBox x:Name="Value" Text="{Binding Model.Value, Mode=TwoWay}" MinWidth="100" Margin="3"/>
            <Button x:Name="Save" Content="Save" MinWidth="50" Height="24" Margin="3"/>
        </StackPanel>
    </StackPanel>

</UserControl>
